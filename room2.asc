function room_Load()
{

    if (EntryDoor == 1) {
        // arriving from bed room
        player.x = 40;
        player.y = 197;
    }
    else if (EntryDoor == 3) {
        // arriving from Outside
        player.x = 280;
        player.y = 197;
    }
  
}

function oDoorBedroom_Interact(Object *theObject, CursorMode mode)
{
  EntryDoor = 2;
  player.ChangeRoom(1);
  Display("You go to your bedroom");
}

function oDoorOutside_Interact(Object *theObject, CursorMode mode)
{
  EntryDoor = 2;
  player.ChangeRoom(3);
  Display("You head outside");
}

function oSink_UseInv()
{
  InventoryItem *currentItem = player.ActiveInventory;
  //Null Check
  if (!User_Has_Active_Item())
  {
    Display("Error: No item selected.");
    return;
  }

  if( currentItem == iWaterCanEmpty)
  {
    player.LoseInventory(iWaterCanEmpty);
    player.AddInventory(iFullWaterCan);
    Display("You filled the watering can.");
  }
  else
  {
    Display("I don't think that will work.");
  }
  
  Keep_Mouse_Cursor();

}
