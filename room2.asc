function room_Load()
{

    if (EntryDoor == 1) {
        // arriving from bed room
        player.x = 40;
        player.y = 197;
    }
    else if (EntryDoor == 3) {
        // arriving from Outside
        player.x = 280;
        player.y = 197;
    }
  
}

function oDoorBedroom_Interact(Object *theObject, CursorMode mode)
{
  EntryDoor = 2;
  player.ChangeRoom(1);
  Display("You go to your bedroom");
}

function oDoorOutside_Interact(Object *theObject, CursorMode mode)
{
  EntryDoor = 2;
  player.ChangeRoom(3);
  Display("You head outside");
}

function oSink_UseInv(Object *theObject, CursorMode mode)
{
  InventoryItem *currentItem = player.ActiveInventory;
   Display("Clicked current item %s",  currentItem);

  if( currentItem == iWaterCanEmpty)
  {
    player.ActiveInventory = iFullWaterCan;
  }
  else
    Display("Is null %s",  iFullWaterCan);
}
