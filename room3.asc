function room_Load()
{
  player.x = 49;
  player.y = 194;
}

function oWaterCan_PickUp(Object *theObject, CursorMode mode)
{
  player.AddInventory(iWaterCanEmpty);
  theObject.Visible = false;
  Display("You gained a watering can!");
}


function oFlowerbedDry_UseInv(Object *theObject)
{
  //Must manually get currently selected inventory item
  InventoryItem *usedItem = player.ActiveInventory;
  if(!User_Has_Active_Item)
  {
    Display("Error: No item selected.");
    return;
  }
   //Only accept the watering can
  if (usedItem == iFullWaterCan)
  {
    FlowerbedWatered = true;
    player.LoseInventory(iFullWaterCan);
    theObject.Graphic = 20;
    Display("You water flowers");
  }
  else if ( !FlowerbedWatered)
    Display("That won't work");
  else
    Display("They are already watered");
  
  //Resetting the mouse mode to prevent cursor dissappearing
  Keep_Mouse_Cursor;
}

function oDoor_Interact(Object *theObject, CursorMode mode)
{
  EntryDoor = 3;
  player.ChangeRoom(2);
  Display("Going inside");
}

